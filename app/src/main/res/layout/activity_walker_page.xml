<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_bg"
        tools:context=".WalkerPageActivity">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/turn_notice"
              android:text="@string/your_turn"
              android:textAppearance="@style/notice"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@id/walk_button"
              android:layout_marginBottom="50dp"
    />
    <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ask_mate_button"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:background="@drawable/ic_ask_mate_button"
            android:textAppearance="@style/seymour_bold_opaque"
            android:text="@string/ask_mate"
            android:textSize="9pt"
            android:singleLine="false"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
    />
    <Button
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/walk_button"
            android:layout_height="230dp"
            android:layout_width="230dp"
            android:background="@drawable/ic_button1"
            android:textAppearance="@style/seymour_bold"
            android:text="@string/walk"
            android:layout_marginBottom="170dp"
    />
    <ImageView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/paws1"
            android:src="@drawable/ic_paws"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
    />
    <ImageView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/paws2"
            android:src="@drawable/ic_paws"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:layout_marginTop="30dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>