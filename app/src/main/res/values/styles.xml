<resources>

    <style name="seymour_bold">
        <item name="android:textColor"> @color/white</item>
        <item name="android:textSize"> 14pt</item>
        <item name="android:textAllCaps"> false</item>
        <item name="android:fontFamily"> @font/seymour_one</item>
    </style>

    <style name="seymour_bold_opaque" parent="seymour_bold">
        <item name="android:textColor"> @color/white_opaque</item>
    </style>

    <style name="notice">
        <item name="android:textColor"> @color/white</item>
        <item name="android:textSize">14pt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/shadows_into_light</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WalkerSwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">#b71c1c</item>
        <item name="android:colorControlActivated">#1b5e20</item>
        <item name="android:colorForeground">#f57f17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

</resources>
